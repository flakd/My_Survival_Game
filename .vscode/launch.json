  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Launch Edge",
      "request": "launch",
      "type": "msedge",
      //"url": "http://localhost:8080",
      "url": "file:///Volumes/GoogleDrive/My%20Drive/gdDev/js/a_game/map.html",
      "webRoot": "${workspaceFolder}"
    },
    
    {
      "name": "Launch Chrome Local File",
      "request": "launch",
      "type": "chrome",
      //"url": "http://localhost:8080",
      "url": "file:///Volumes/GoogleDrive/My%20Drive/gdDev/js/a_game/map.html",
      "webRoot": "${workspaceFolder}"
    },

    {
      "name": "Launch Chrome local file w/existing profile",
      "request": "launch",
      "type": "chrome",
      "url": "file:///Volumes/GoogleDrive/My%20Drive/gdDev/js/a_game/map.html",
      "webRoot": "${workspaceFolder}",
      "userDataDir": false,
      "runtimeArgs": ["--profile-directory=default"],
    },
    
    {
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    }
  ]
}