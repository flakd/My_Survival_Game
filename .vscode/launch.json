  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch as Typescript",
      "program": "${workspaceFolder}/js/HW.ts",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/out/**/*.js"]
    },
    {
      "name": "Launch Edge",
      "request": "launch",
      "type": "msedge",
      //"url": "http://localhost:8080",
      //"url": "file:///Volumes/GoogleDrive/My%20Drive/gdDev/js/a_game/index.html",
      "url": "file:///myDev/js/a_game/public/index.html",
      "webRoot": "${workspaceFolder}"
    },

    {
      "name": "Launch Chrome Local File",
      "request": "launch",
      "type": "chrome",
      //"url": "http://localhost:8080",
      //"url": "file:///Volumes/GoogleDrive/My%20Drive/gdDev/js/a_game/index.html",
      "url": "file:///myDev/js/a_game/public/index.html",
      "webRoot": "${workspaceFolder}"
    },

    {
      "name": "Launch Chrome local file w/existing profile",
      "request": "launch",
      "type": "chrome",
      //"url": "file:///Volumes/GoogleDrive/My%20Drive/gdDev/js/a_game/index.html",
      "url": "file:///myDev/js/a_game/index.html",
      "webRoot": "${workspaceFolder}",
      //"outFiles": [],
      //"resolveSourceMapLocations": null,
      "userDataDir": false,
      /* "launchBrowser": {
        "enabled": true,
        "args": "${auto-detect-url}",
        "windows": {
            "command": "cmd.exe",
            "args": "/C start ${auto-detect-url}"
        },
        "osx": {
            "command": "open -a 'Google Chrome Profile10_VsCode'"
        },
        "linux": {
            "command": "xdg-open"
        }
      }, */
      "runtimeArgs": ["--profile-directory=profile 10"]
      //"runtimeExecutable": "Google Chrome Profile10_VsCode",
      //"runtimeArgs": ["--profile-directory=Profile10_VsCoden"]
    },

    {
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    }
  ]
}
